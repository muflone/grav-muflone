{% extends 'partials/base.html.twig' %}
{% do assets.addCss('theme://css/layout-item.css', 90) %}
{% do assets.addCss('theme://css/layout-flags.css', 90) %}

{% block header %}
  {% include 'partials/product_header.html.twig' with { 'subtitle': 'Choose language / Scegli la lingua' } %}
{% endblock %}

{% block content %}
          <h1><a name="description" class="anchor"></a>Choose language / Scegli la lingua</h1>
          <table class="flags" border="0" cellpadding="0" cellspacing="0">
            <tbody>
              <tr>
                <td><a href="{{ url('en/' ~ active_product.short_name ~ '/index') }}"><img alt="English language" src="{{ url('theme://images/flag-english-128.png') }}"><br>English</a></td>
                <td><a href="{{ url('it/' ~ active_product.short_name ~ '/index') }}"><img alt="Italian language" src="{{ url('theme://images/flag-italian-128.png') }}"><br>Italiano</a></td>
              </tr>
            </tbody>
          </table>
{% endblock %}
