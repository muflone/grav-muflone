{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
{% set active_product = nil %}
{% for product in theme_config.products %}
{%   if product.short_name == page.header.product %}
{%     set active_product = product %}
{%   endif %}
{% endfor %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
  <head>
{% block head %}
    {% include 'partials/metadata.html.twig' %}
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="author" href="https://plus.google.com/+FabioCastelli"/>
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
    <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
        {% do assets.addCss('theme://css/reset.css', 100) %}
        {% do assets.addCss('theme://css/font-architects.css', 99) %}
        {% do assets.addCss('theme://css/stylesheet.css', 98) %}
    {% endblock %}
    {{ assets.css() }}

    {% block javascripts %}
        {% do assets.addJs('jquery', 100) %}
    {% endblock %}
    {{ assets.js() }}
{% endblock head%}
</head>
<body>
{% block header %}
    <header>
      <div class="inner">
        <h1>{{ page.title }}</h1>
        <h2>&nbsp;</h2>
      </div>
    </header>
{% endblock %}

{% block body %}
    <div id="content-wrapper">
      <div class="inner clearfix">
        <section id="main-content">
        {% block content %}{% endblock %}
        </section>
  {% block sidebar %}{% endblock sidebar %}
      </div>
    </div>
{% endblock %}

{% include 'partials/footer.html.twig' %}
{% block bottom %}
    {{ assets.js('bottom') }}
{% endblock %}

</body>
</html>
