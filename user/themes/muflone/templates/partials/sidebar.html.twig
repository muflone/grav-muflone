        <aside id="sidebar">
          <ul class="menu1">
{% if page.header.depth == 2 %}
  {% set starting_page = page.parent.parent.children %}
{% else %}
  {% set starting_page = page.parent.children %}
{% endif %}
{% for p in starting_page %}
  {% if p.visible %}
            <li class="menu1"><a href="{{ p.url }}">{{ p.title }}</a></li>
    {% if p.children.count > 0 %}
            <ul class="menu2">
      {% for p in p.children %}
        {% if p.visible %}
            <li class="menu2"><a href="{{ p.url }}">{{ p.title }}</a></li>
        {% endif %}
      {% endfor %}
            </ul>
    {% endif %}
  {% endif %}
{% endfor %}
          </ul>
          <p class="repo-owner"><a href="{{ active_product.github }}" target="_blank">{{ active_product.name }}</a> is developed by Muflone.</p>
