{% extends 'item.html.twig' %}

{% block content %}
          <h1><a name="translations" class="anchor"></a>{{ 'THEME_MUFLONE.TRANSLATIONS.TITLE'|t }}</h1>
          <p>{{ 'THEME_MUFLONE.TRANSLATIONS.TRANSLATED'|t("<strong>" ~ active_product.name ~ "</strong>") }}</p>
          <ul>
  {% for language in active_product.languages %}
            <li>{{ ('THEME_MUFLONE.LANGUAGES.' ~ language|upper())|t }}</li>
  {% endfor %}
          </ul>
          <p>{{ 'THEME_MUFLONE.TRANSLATIONS.TRANSLATORS_NEEDED'|t(active_product.name) }}</p>
          <p>{{ 'THEME_MUFLONE.TRANSLATIONS.SUBMIT'|t(active_product.translations, active_product.translations, active_product.github, active_product.github) }}</p>
    {{ page.content }}
{% endblock %}
